<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baglogin"
    tools:context="com.example.adli.mar.login ">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/png8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/png7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />
    <EditText
        android:id="@+id/Login_edtPass"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_weight="12"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="رمز"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />
    <EditText
        android:id="@+id/Login_edtUser"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:layout_weight="9.18"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="اسم"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/Login_btnRegister"
        android:layout_width="199dp"
        android:layout_height="64dp"
        android:onClick="btnClick"
        android:text="ثبت نام"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        android:textSize="30dp"
        android:layout_weight="0.60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />
    <Button
        android:id="@+id/Login_btnSingin"
        android:layout_width="199dp"
        android:layout_height="64dp"

        android:layout_weight="23.02"
        android:background="?attr/colorButtonNormal"
        android:onClick="btnClick"
        android:text="ورود به برنامه"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736"
        tools:layout_editor_absoluteY="387dp"
        app:layout_constraintHorizontal_bias="0.505" />

</android.support.constraint.ConstraintLayout>