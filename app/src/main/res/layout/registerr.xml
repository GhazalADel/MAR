<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baglogin"
    tools:context="com.example.adli.mar.SignUPActivity "
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/png8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="78dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/png7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="78dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/png7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/buttonCreateAccount"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="199dp"
        android:layout_height="64dp"
        android:layout_weight="0.17"
        android:text="انجام عضویت"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_weight="12"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="رمز"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />
    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:layout_weight="9.18"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="اسم"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />
    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_weight="12"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint=" تکرار رمز"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:textColor="#e60e0e"
        android:textColorHint="#e60e0e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>